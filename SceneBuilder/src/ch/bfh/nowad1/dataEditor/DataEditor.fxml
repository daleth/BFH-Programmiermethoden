<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450" prefWidth="260" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="ch.bfh.nowad1.dataEditor.DataEditorController">
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="name" prefHeight="26.0" prefWidth="112.0" text="Name" />
            <TextField fx:id="quantity" prefHeight="26.0" prefWidth="70.0" text="Quantity" />
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Add" onAction="#handleAdd"/>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="title" alignment="TOP_LEFT" nodeOrientation="LEFT_TO_RIGHT" text="Data Editor">
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <TableView >
        <columns>
          <TableColumn minWidth="50.0" prefWidth="100" text="Name" />
          <TableColumn minWidth="50.0" prefWidth="100" text="Quantity" />
        </columns>
      </TableView>
   </center>
</BorderPane>
