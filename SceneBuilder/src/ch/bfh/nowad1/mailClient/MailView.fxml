<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bfh.nowad1.mailClient.MailController">
   <bottom>
      <ButtonBar prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <VBox alignment="CENTER" prefHeight="60" prefWidth="100.0">
               <children>
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSend" text="Send" />
                  <ProgressIndicator fx:id="progressIndicator" progress="0.0" visible="false">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ProgressIndicator>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
        </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="To" />
            <TextField fx:id="to" />
            <Label text="From" />
            <TextField fx:id="from" />
            <Label text="Subject" />
            <TextField fx:id="subject" />
            <Label text="Message" />
            <TextArea fx:id="message" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
